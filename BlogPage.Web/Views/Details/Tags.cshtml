@{
    ViewData["Title"] = "Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<BlogTagDTO>
<h1></h1>
<div class="col-lg-8 col-md-12 left-box">

    @foreach (var unit in Model)
    {
        <div class="card single_post">
            <div class="body">
                <div class="img-post">
                    <img class="d-block img-fluid" src="~/pictures/@unit.Blogs.FirstOrDefault().ImagePath" alt="@unit.Blogs.FirstOrDefault().Title">
                </div>
                <h3>@unit.Blogs.FirstOrDefault().Title</h3>
            </div>
            <div class="footer">
                <div class="actions">
                    <a asp-controller="Details" asp-action="ContinueReadingBlog" asp-route-id="@unit.Blogs.FirstOrDefault().ID" class="btn btn-outline-secondary">Continue Reading</a>
                </div>
            </div>
        </div>
    }
</div>
